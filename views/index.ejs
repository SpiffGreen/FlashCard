</head>
<body>
    <div class="main-layout">
        <!-- Nav Section -->
        <nav id="navTop">
            <h3 class="logo">FlashCard</h3>

            <ul class="nav-links hide-show">
                <!-- <li><a href="">Add</a></li> -->
                <li><a href="#">Share</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>

            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>

        </nav>
        
        <!-- navigate to top -->
        <!-- <a href="#"></a> -->

        <header class="board">
            <h3 class="greeting">Welcome <%= name %>ðŸ˜Ž</h3>
            <!-- Adding FlashCard -->
            <p>Create a flash card</p><br>
            <form action="/add" method="POST">
                <textarea name="question" id="question" placeholder="Enter question here(html is allowed for editing)..."></textarea>
                <br>
                <input type="text" name="answer" id="answer" placeholder="Place your answer here...">
                <button type="submit" class="subBtn">Add FlashCard</button>
            </form>
        </header>

        <button class="modalBtn" type="hidden" data-micromodal-trigger="modal-1">Open Modal</button>
        <main>
            <!-- Cards section -->      
        </main>

        <div class="loader-area">
            <div class="loader"></div>
        </div>

        <!-- Footer Section -->
        <footer class="moto">
            &copy;2021. All Rights Reserved.
        </footer>
    </div>
    
